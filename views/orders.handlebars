              <button class="btn bg-info text-white btn-circle" type="submit" aria-label="search"><i
                  class="fas fa-2x fa-search"></i></button>
            </div>
          </form>

          <nav class="navbar bg-white">
            <div class="container">
              <button
                class="navbar-toggler navbar-toggler-right font-weight-bold bg-info text-white rounded col-lg-12 ml-auto"
                type="button" data-toggle="collapse" data-target="#receivedList" aria-controls="receivedList"
                aria-expanded="false" aria-label="Toggle navigation" aria-label="nav toggler"> RECEIVED </button>
