                </ul>
              </div>
            </div>
          </nav>

          <nav class="navbar bg-white">
            <div class="container">
              <button
                class="navbar-toggler navbar-toggler-right font-weight-bold bg-info text-white rounded col-lg-12 ml-auto"
                type="button" data-toggle="collapse" data-target="#inProgressList" aria-controls="inProgressList"
                aria-expanded="false" aria-label="Toggle navigation" aria-label="nav toggler"> IN PROGRESS </button>
              <div class="collapse navbar-collapse" id="inProgressList">
                <ul class="navbar-nav ml-auto font-weight-bold">
                  {{#each orders}}
                  {{#if inProgress}}
                  {{> orders/order-nav inProgress=true}}
                  {{/if}}
                  {{/each}}
                </ul>
              </div>
            </div>
          </nav>

          <nav class="navbar bg-white">
            <div class="container">
              <button
                class="navbar-toggler navbar-toggler-right font-weight-bold bg-info text-white rounded col-lg-12 ml-auto"
                type="button" data-toggle="collapse" data-target="#waitingList" aria-controls="waitingList"
                aria-expanded="false" aria-label="Toggle navigation" aria-label="nav toggler"> ON HOLD </button>
              <div class="collapse navbar-collapse" id="waitingList">
                <ul class="navbar-nav ml-auto font-weight-bold">
                  {{#each orders}}
                  {{#if waiting}}
                  {{> orders/order-nav waiting=true}}
                  {{/if}}
                  {{/each}}
                </ul>
              </div>
            </div>
          </nav>

          <nav class="navbar bg-white">
            <div class="container">
              <button
                class="navbar-toggler navbar-toggler-right font-weight-bold bg-info text-white rounded col-lg-12 ml-auto"
                type="button" data-toggle="collapse" data-target="#completeList" aria-controls="completeList"
                aria-expanded="false" aria-label="Toggle navigation" aria-label="nav toggler"> COMPLETE </button>
              <div class="collapse navbar-collapse" id="completeList">
                <ul class="navbar-nav ml-auto font-weight-bold">
                  {{#each orders}}
                  {{#if complete}}
                  {{> orders/order-nav complete=true}}
                  {{/if}}
                  {{/each}}
                </ul>
              </div>
            </div>
          </nav>

        </div>

        <div class="col-lg-8 mr-auto" id="infoCard">

          <div class="card text-left">
            <div class="card-header font-weight-bold bg-info text-white h4 d-flex justify-content-center">
              Information:</div>
            {{#each orders}}
            {{#if inView}}
            {{> orders/order-card inView=true}}
            {{/if}}
            {{/each}}
          </div>

          <!-- form goes here -->
          <div class="card-header font-weight-bold bg-info text-white h4 d-flex justify-content-center mt-4" id="new">
            Input Order:</div>
          <div class="card-body font-weight-bold">
            <form class="create">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="firstname">First Name</label>
                  <input type="text" class="" id="firstname">
                </div>
                <div class="form-group col-md-6">
                  <label for="lastname">Last Name</label>
                  <input type="text" class="" id="lastname">
                </div>
              </div>
              <div class="hide" id="photo"></div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="email">Email</label>
                  <input type="email" class="" id="email" placeholder="customer@email.com">
                </div>
                <div class="form-group col-md-6">
                  <label for="tel">Telephone</label>
                  <input type="text" class="" id="tel" pattern="[0-9]{10}">
                </div>
              </div>
              <div class="form-group">
                <label for="addr">Address</label>
                <input type="text" class="" id="addr" placeholder="1234 Main St"></input>
              </div>
              <div class="form-group">
                <label for="addrB">Address 2</label>
                <input type="text" class="" id="addrB" placeholder="Apartment, studio, or floor"></input>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="city">City</label>
                  <input type="text" class="" id="city"></input>
                </div>
                <div class="form-group col-md-4">
                  <label for="state">State</label>
                  <select id="state" class="">
                    <option>CT</option>
                    <option>DE</option>
                    <option>MA</option>
                    <option>MD</option>
                    <option>ME</option>
                    <option>NH</option>
                    <option selected>NJ</option>
                    <option>NY</option>
                    <option>PA</option>
                    <option>VT</option>
                  </select>
                </div>
                <div class="form-group col-md-2">
                  <label for="zip">ZIP</label>
                  <input type="text" class="" id="zip">
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-4">
                  <label for="year">Year</label>
                  <input type="number" class="" id="year" min="1912" max="2025">
                </div>
                <div class="form-group col-md-4">
                  <label for="make">Make</label>
                  <input type="text" class="" id="make">
                </div>
                <div class="form-group col-md-4">
                  <label for="model">Model</label>
                  <input type="text" class="" id="model">
                </div>
              </div>
              <div class="form-group">
                <label for="vin">VIN</label>
                <input type="text" class="" id="vin" placeholder="(Optional)">
              </div>
              <div class="form-row justify-content-center">
                <div class="form-group col-md-4">
                  <label for="hours">Labor Hours</label>
                  <input type="number" class="" id="hours" min="1" max="80">
                </div>
                <div class="form-group col-md-4">
                  <label for="make">Parts Price</label>
                  <input type="number" step="0.01" min="0" max="20000" class="" id="partsPrice" placeholder="">
                </div>
              </div>
                <div class="form-group">
                  <label for="partsNeeded">Parts Needed</label>
                   <input type="text" class="" id="partsNeeded" rows="1" placeholder="List required parts here"></input>
                </div>
              <div class="form-group">
                <label for="issue">Issue:</label>
                <textarea class="" id="issue" rows="3"></textarea>
              </div>
              <div class="d-flex justify-content-around">
                <button type="submit" class="splashBtn" aria-label="create work order">Submit</button>
                {{!-- <script type="text/javascript" src="/js/member-upload.js" defer></script> --}}
              </div>
            </form>
            <button id="upload_widget" class="btn btn-info btn-circle btn-lg" aria-label="image upload"><i
                class="fas fa-2x fa-image" ></i></button>
          </div>
        </div>



      </div>

