                {{/each}}
            </div>
        </li>

        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                aria-expanded="true" aria-controls="collapseUtilities">
                <i class="fas fa-fw fa-wrench"></i>
                <span>In Progress</span>
            </a>
            <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                data-parent="#accordionSidebar">
                {{#each orders}}
                {{#if inProgress}}
                {{> orders/order-nav inProgress=true}}
                {{/if}}
                {{/each}}
            </div>
        </li>

        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities2"
                aria-expanded="true" aria-controls="collapseUtilities2">
                <i class="fas fa-fw fa-pause"></i>
                <span>On Hold</span>
            </a>
            <div id="collapseUtilities2" class="collapse" aria-labelledby="headingUtilities"
                data-parent="#accordionSidebar">
                {{#each orders}}
                {{#if waiting}}
                {{> orders/order-nav waiting=true}}
                {{/if}}
                {{/each}}
            </div>
        </li>

        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities3"
                aria-expanded="true" aria-controls="collapseUtilities3">
                <i class="fas fa-fw fa-check"></i>
                <span>Complete</span>
            </a>
            <div id="collapseUtilities3" class="collapse" aria-labelledby="headingUtilities"
                data-parent="#accordionSidebar">
                {{#each orders}}
                {{#if complete}}
                {{> orders/order-nav complete=true}}
                {{/if}}
                {{/each}}
            </div>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block">

        <!-- Sidebar Toggler (Sidebar) -->
        <div class="text-center d-none d-md-inline">
            <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>

    </ul>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <!-- Sidebar Toggle (Topbar) -->
                <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                    <i class="fa fa-bars"></i>
                </button>

                <!-- Topbar Search -->
                <form
                    class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search searchForm">
                    <div class="input-group">
                        <input type="text" class="form-control bg-light border-0 small"
                            placeholder="Enter Order Number or Last Name" aria-label="Search"
                            aria-describedby="basic-addon2" id="searchTerm">
                        <div class="input-group-append">
                            <button class="btn btn-info" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Topbar Navbar -->
                <ul class="navbar-nav ml-auto">

                    <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                    <li class="nav-item dropdown no-arrow d-sm-none">
                        <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-search fa-fw"></i>
                        </a>
                        <!-- Dropdown - Messages -->
                        <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in"
                            aria-labelledby="searchDropdown">
                            <form class="form-inline mr-auto w-100 navbar-search">
                                <div class="input-group">
                                    <input type="text" class="form-control bg-light border-0 small"
                                        placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="button">
                                            <i class="fas fa-search fa-sm"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>

                    <!-- Nav Item - User Information -->
                    <li class="nav-item dropdown no-arrow">
                        <a href="/logout">
                           
                            <i class="fas fa-2x fa-sign-out-alt text-info"></i>
                        </a>
                    </li>

                </ul>

            </nav>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div id="searchError"></div>

                <!-- Content Row -->

                <div class="row">

                    {{#each orders}}
                    {{#if inView}}
                    {{> orders/order-card inView=true}}
                    {{/if}}
                    {{/each}}




                </div>

                <!-- Content Row -->
                <div class="row">

                    <!-- Content Column -->
                    <div class="col-lg-12 mb-4">

                        <!-- Project Card Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 bg-gradient-info text-white">
                                <h6 class="m-0 font-weight-bold text-center">New Work Order</h6>
                            </div>
                            <div class="card-body font-weight-bold text-dark">
                                <form class="create">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="firstname">First Name</label>
                                            <input type="text" class="" id="firstname">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="lastname">Last Name</label>
                                            <input type="text" class="" id="lastname">
                                        </div>
                                    </div>
                                    <div class="hide" id="photo"></div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="email">Email</label>
                                            <input type="email" class="" id="email" placeholder="customer@email.com">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="tel">Telephone</label>
                                            <input type="text" class="" id="tel" pattern="[0-9]{10}">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="addr">Address</label>
                                        <input type="text" class="" id="addr" placeholder="1234 Main St"></input>
                                    </div>
                                    <div class="form-group">
                                        <label for="addrB">Address 2</label>
                                        <input type="text" class="" id="addrB"
                                            placeholder="Apartment, studio, or floor"></input>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="city">City</label>
                                            <input type="text" class="" id="city"></input>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="state">State</label>
                                            <select id="state" class="">
                                                <option>CT</option>
                                                <option>DE</option>
                                                <option>MA</option>
                                                <option>MD</option>
                                                <option>ME</option>
                                                <option>NH</option>
                                                <option selected>NJ</option>
                                                <option>NY</option>
                                                <option>PA</option>
                                                <option>VT</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="zip">ZIP</label>
                                            <input type="text" class="" id="zip">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="year">Year</label>
                                            <input type="number" class="" id="year" min="1912" max="2025">
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="make">Make</label>
                                            <input type="text" class="" id="make">
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="model">Model</label>
                                            <input type="text" class="" id="model">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="vin">VIN</label>
                                        <input type="text" class="" id="vin" placeholder="(Optional)">
                                    </div>
                                    <div class="form-row justify-content-center">
                                        <div class="form-group col-md-4">
                                            <label for="hours">Labor Hours</label>
                                            <input type="number" class="" id="hours" min="1" max="80">
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="make">Parts Price</label>
                                            <input type="number" step="0.01" min="0" max="20000" class=""
                                                id="partsPrice" placeholder="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="partsNeeded">Parts Needed</label>
                                        <input type="text" class="" id="partsNeeded" rows="1"
                                            placeholder="List required parts here"></input>
                                    </div>
                                    <div class="form-group">
                                        <label for="issue">Issue:</label>
                                        <textarea class="" id="issue" rows="3"></textarea>
                                    </div>
                                    <div class="d-flex justify-content-around">
                                        <button type="submit" class="btn-lg btn-info"
                                            aria-label="create work order">Submit</button>
                                        {{!-- <script type="text/javascript" src="/js/member-upload.js" defer></script> --}}
                                    </div>
                                </form>
                                <button id="upload_widget" class="btn btn-circle btn-md" style="background-color:#BD34C7;"
                                    aria-label="image upload"><i class="fas fa-3x fa-image text-white"></i></button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

