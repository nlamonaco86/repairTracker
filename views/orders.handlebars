          </div>
          <!-- SEARCH BAR GOES HERE-->
          <form class="searchForm bg-info">
            <div class="form-row ml-1 d-flex justify-content-around">
              <div class="col-lg-9 mt-1">
                {{!-- <label for="searchTerm"></label> --}}
                <input type="text" class="" placeholder="Enter Order # or Last Name" id="searchTerm" aria-label="search term">
