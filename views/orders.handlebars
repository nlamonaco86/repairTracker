<div class="container">

  <section class="mt-4 bg-light text-dark mb-0" id="main">

    <div class="">
      <!-- SIDE NAVIGATION -->
      <div class="row">
        <div class="col-lg-4 ml-auto">

          <!-- Error handling -->
          <div id="searchError"  style="padding:10px;border-radius:25px;">

          </div>
          <!-- SEARCH BAR GOES HERE-->
          <form class="searchForm bg-info">
            <div class="form-row ml-1 d-flex justify-content-around">
              <div class="col-lg-9 mt-1">
                {{!-- <label for="searchTerm"></label> --}}
                <input type="text" class="" placeholder="Enter Order # or Last Name" id="searchTerm" aria-label="search term">
              </div>
              <button class="btn bg-info text-white btn-circle" type="submit" aria-label="search"><i
                  class="fas fa-2x fa-search"></i></button>
            </div>
          </form>

          <nav class="navbar bg-white">
            <div class="container">
              <button
                class="navbar-toggler navbar-toggler-right font-weight-bold bg-info text-white rounded col-lg-12 ml-auto"
                type="button" data-toggle="collapse" data-target="#receivedList" aria-controls="receivedList"
                aria-expanded="false" aria-label="Toggle navigation" aria-label="nav toggler"> RECEIVED </button>
