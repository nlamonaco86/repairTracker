<div class="card-body row">
    <div class="col-lg-12 d-flex justify-content-end">
        {{#if unread}}
        <div id="markRead">
            <button class="btn btn-warning btn-md" aria-label="mark read"><i
                    class="fas fa-2x fa-envelope-open-text"></i></button>
        </div>
        {{/if}}
        {{#if seen}}
        <div id="markUnread">
            <button class="btn btn-warning btn-circle btn-lg" aria-label="mark unread"><i
                    class="fas fa-3x fa-envelope"></i></button>
        </div>
        {{/if}}
    </div>
    <div class="col-lg-12">
        <p class="card-title"><span class="lead font-weight-bold">From: {{senderName}}</span> @<span
                class="small">{{createdAt}}</span></p>
        <p><span class="font-weight-bold lead">Subject:</span> {{subject}}</p>
        <p style="display:none;" id="msgID">{{id}}</p>
        <p style="border-style: groove;border-radius:14px;font-size:18px;padding:10px;">{{body}}</p>
    </div>

    <div class="col-lg-12">
        <h5 class="card-title mt-3"></h5>
        <form id="msgReply">
            <div class="form-group">
                <textarea type="text" class="extended" id="msg" rows="6">
                  </textarea>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success btn-circle btn-lg" aria-label="message reply">
                    <i class="fas fa-3x fa-reply"></i></button>
            </div>
        </form>
    </div>
</div>