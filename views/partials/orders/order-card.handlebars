<div id="information">
    <div class="card-body row">
        <div class="col-lg-6">
            <h4 class="card-title">Order #<span id="orderID">{{id}}</span></h4>
            <h5 class="card-title">{{firstName}} {{lastName}}</h5>
            <div class="mt-3">
                <a href="mailto:{{email}}" class="text-info font-weight-bold">{{email}}</a>
            </div>
            <div class="mt-2">
                <a href="tel:{{tel}}" class="font-weight-bold text-info">{{tel}}</a>
            </div>
            <div class="mt-3">{{addr1}}</div>
            <div>{{addr2}}</div>
            <div>{{city}}, {{state}} {{zip}}</div>
            <div class="mt-3" id="buttonDiv">
                <div class="d-flex justify-content-center">
                    <p class="font-weight-bold mt-2">ACTIONS:</p>
                </div>
                <div class="row d-flex justify-content-around">
                    <div id="invoiceDiv">
                        <a id="invoiceBtn" href="/invoice/{{id}}" target="_blank"><button class="btn btn-info btn-circle btn-lg" aria-label="invoice"><i
                                    class="fas fa-3x fa-file-invoice-dollar"></i></button></a>
                    </div>
                    <button class="photo-modal-show btn btn-info btn-circle btn-lg" data-toggle="modal"
                        data-target="#photoModal" aria-label="view photo"><i class="fas fa-3x fa-image"></i></button>

                    {{#if received}}
                    <div id="updateInProgress">
                        <button class="btn btn-success btn-circle btn-lg" aria-label="in progress"><i class="fas fa-3x fa-wrench"></i></button>
                    </div>
                    <div id="updateWaiting">
                        <button class="btn btn-warning btn-circle btn-lg" aria-label="waiting"><i class="fas fa-3x fa-pause"></i></button>
                    </div>
                    <div id="delete">
                        <button class="btn btn-danger btn-circle btn-lg"><i
                                class="fas fa-3x fa-times" aria-label="delete"></i></button></button>
                    </div>
                    {{/if}}
                    {{#if inProgress}}
                    <div id="updateWaiting">
                        <button class="btn btn-warning btn-circle btn-lg" aria-label="waiting"><i class="fas fa-3x fa-pause"></i></button>
                    </div>
                    <div id="updateComplete">
                        <button class="btn btn-success btn-circle btn-lg" aria-label="complete"><i class="fas fa-3x fa-check"></i></button>
                    </div>
                    {{/if}}
                    {{#if waiting}}
                     <div id="updateInProgress">
                        <button class="btn btn-success btn-circle btn-lg"><i class="fas fa-3x fa-wrench"></i></button>
                    </div>
                    {{/if}}
                    {{#if complete}}
                     <div id="markPaid">
                        <button class="btn btn-success btn-circle btn-lg" aria-label="paid"><i
                                class="fas fa-3x fa-dollar-sign"></i></button>
                    </div>
                    {{/if}}
                    {{#if paid}}
                    {{/if}}
                </div>

            </div>
        </div>

        <div class="col-lg-6">
            <h5 class="card-title mt-3">{{year}} {{make}} {{model}}</h5>

            <label for="issueU" class="font-weight-bold">Tech Instructions:</label>
            <form id="updateIssue">
                <div class="form-group">
                    <textarea type="text" class="extended" id="issueU" rows="6">{{issue}}
                  </textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success btn-circle btn-lg" aria-label="update issue">
                        <i class="fas fa-3x fa-save"></i></button>
                </div>
            </form>
        </div>
    </div>
