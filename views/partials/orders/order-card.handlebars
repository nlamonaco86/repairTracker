<div>
    <div class="card-body row" id="photoViewer" style="display: none;">
        <div class="col-lg-12">
            <div class="d-flex flex-row justify-content-end">
                <div>
                    <div id="close">
                        <button class="btn btn-danger btn-circle btn-md mb-3" id="close"><i
                                class="fas fa-2x fa-times"></i></button>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-center">
                <div>
                    {{#if photo}}
                    <img src="{{photo}}" alt="auto repair" class="img-fluid" id="photo">
                    {{/if}}

                </div>
            </div>

        </div>
    </div>

    <div class="card-body row">
        <div class="col-lg-6">
             <div id="editCustomerId" style="display:none;">{{CustomerId}}</div>
            <div id="customerCard">
                <h4 class="card-title">Order #<span id="orderID">{{id}}</span> {{#if paid}}
                 <div><span class="text-danger font-weight-bold">PAID</span></div>
                 {{/if}}</h4>
                <h5 class="card-title"><span id="fN">{{firstName}}</span><span id="lN"> {{lastName}} </span></h5>
                <div class="mt-3">
                    <a href="mailto:{{email}}" class="text-info font-weight-bold" id="custEmail">{{email}}</a>
                </div>
                <div class="mt-2">
                    <a href="tel:{{tel}}" class="font-weight-bold text-info" id="custTel">{{tel}}</a>
                </div>
                <div class="mt-3" id="caddr1">{{addr1}}</div>
                <div id="caddr2">{{addr2}}</div>
                <div><span id="cCity">{{city}}</span>, <span id="cState">{{state}}</span> <span id="cZip">{{zip}}</span></div>
            </div>

            <div class="mt-3" id="buttonDiv">
                <div class="d-flex justify-content-center">
                    <p class="font-weight-bold mt-2">ACTIONS:</p>
                </div>
                <div class="row d-flex justify-content-around">
                    <div id="invoiceDiv">
                        <a id="invoiceBtn" href="/invoice/{{id}}" target="_blank"><button
                                class="btn btn-info btn-circle btn-lg" aria-label="invoice"><i
                                    class="fas fa-3x fa-file-invoice-dollar"></i></button></a>
                    </div>
                    <button class="photo-modal-show btn btn-info btn-circle btn-lg" data-toggle="modal"
                        data-target="#photoModal" aria-label="view photo"><i class="fas fa-3x fa-image"></i></button>

                    {{#if received}}
                    <div id="updateInProgress">
                        <button class="btn btn-success btn-circle btn-lg" aria-label="in progress"><i
                                class="fas fa-3x fa-wrench"></i></button>
                    </div>
                    <div id="updateWaiting">
                        <button class="btn btn-warning btn-circle btn-lg" aria-label="waiting"><i
                                class="fas fa-3x fa-pause"></i></button>
                    </div>
                    <div id="delete">
                        <button class="btn btn-danger btn-circle btn-lg"><i class="fas fa-3x fa-times"
                                aria-label="delete"></i></button></button>
                    </div>
                    {{/if}}
                    {{#if inProgress}}
                    <div id="updateWaiting">
                        <button class="btn btn-warning btn-circle btn-lg" aria-label="waiting"><i
                                class="fas fa-3x fa-pause"></i></button>
                    </div>
                    <div id="updateComplete">
                        <button class="btn btn-success btn-circle btn-lg" aria-label="complete"><i
                                class="fas fa-3x fa-check"></i></button>
                    </div>
                    {{/if}}
                    {{#if waiting}}
                    <div id="updateInProgress">
                        <button class="btn btn-success btn-circle btn-lg" aria-label="in progress"><i
                                class="fas fa-3x fa-wrench"></i></button>
                    </div>
                    {{/if}}
                    {{#if complete}}
                    <div id="markPaid">
                        <button class="btn btn-success btn-circle btn-lg" aria-label="paid"><i
                                class="fas fa-3x fa-dollar-sign"></i></button>
                    </div>
                    {{/if}}
                </div>

            </div>
        </div>

        <div class="col-lg-6">
            <h5 class="card-title mt-3">{{year}} {{make}} {{model}}</h5>

            <label for="issueU" class="font-weight-bold">Tech Instructions:</label>
            <form id="updateIssue">
                <div class="form-group">
                    <textarea type="text" class="extended" id="issueU" rows="6">{{issue}}
                  </textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success btn-circle btn-lg" aria-label="update issue">
                        <i class="fas fa-3x fa-save"></i></button>
                </div>
            </form>
        </div>
    </div>