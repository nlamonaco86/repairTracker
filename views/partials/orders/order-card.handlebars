<div id="information">
    <div class="card-body row">
        <div class="col-lg-6">
            <h4 class="card-title">Order #<span>{{id}}</span></h4>
            <h5 class="card-title">{{firstName}} {{lastName}}</h5>
            <div class="mt-3">
                <a href="mailto:{{email}}" class="text-info font-weight-bold">{{email}}</a>
            </div>
            <div class="mt-2">
                <a href="tel:{{tel}}" class="font-weight-bold text-info">{{tel}}</a>
            </div>
            <div class="mt-3">{{addr1}}</div>
            <div>{{addr2}}</div>
            <div>{{city}}, {{state}} {{zip}}</div>
            <div class="mt-3" id="buttonDiv">
                <div class="d-flex justify-content-center">
                    <p class="font-weight-bold mt-2">ACTIONS:</p>
                </div>
                <div class="row d-flex justify-content-around">
                    <div id="invoiceDiv">
                        <a id="invoiceBtn" href="/invoice/{{id}}" target="_blank"><button class="btn btn-info btn-circle btn-lg"><i
                                    class="fas fa-2x fa-file-invoice-dollar"></i></button></a>
                    </div>
                    <button class="photo-modal-show btn btn-info btn-circle btn-lg" data-toggle="modal"
                        data-target="#photoModal"><i class="fas fa-2x fa-image"></i></button>

                    {{#if received}}
                    <div id="updateInProgress">
                        <button class="btn btn-success btn-circle btn-lg"><i class="fas fa-2x fa-wrench"></i></button>
                    </div>
                    <div id="updateWaiting">
                        <button class="btn btn-warning btn-circle btn-lg"><i class="fas fa-2x fa-pause"></i></button>
                    </div>
                    <div id="delete">
                        <button class="btn btn-danger btn-circle btn-lg"><i
                                class="fas fa-2x fa-times"></i></button></button>
                    </div>
                    {{/if}}
                    {{#if inProgress}}
                    <div id="updateWaiting">
                        <button class="btn btn-warning btn-circle btn-lg"><i class="fas fa-2x fa-pause"></i></button>
                    </div>
                    <div id="updateComplete">
                        <button class="btn btn-success btn-circle btn-lg"><i class="fas fa-2x fa-check"></i></button>
                    </div>
                    {{/if}}
                    {{#if waiting}}
                     <div id="updateInProgress">
                        <button class="btn btn-success btn-circle btn-lg"><i class="fas fa-2x fa-wrench"></i></button>
                    </div>
                    {{/if}}
                    {{#if complete}}
                     <div id="markPaid">
                        <button class="btn btn-success btn-circle btn-lg"><i
                                class="fas fa-2x fa-dollar-sign"></i></button>
                    </div>
