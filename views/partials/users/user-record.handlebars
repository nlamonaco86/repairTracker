<form>
  <div class="form-row justify-content-between" id="{{id}}">
    <div class="form-group col-lg-2">
      <label for="first name">First</label>
      <input type="text" class="form-control" id="first{{id}}" value="{{first}}">
    </div>
    <div class="form-group col-lg-2">
      <label for="last name">Last</label>
      <input type="text" class="form-control" id="last{{id}}" value="{{last}}">
    </div>
    <div class="form-group col-lg-2">
      <label for="position">Position</label>
      <select id="position{{id}}" class="">
        <option selected>{{position}}</option>
        <option>Manager</option>
        <option>Technician</option>
        <option>Employee</option>
        <option>Customer</option>
      </select>
    </div>
    <div class="form-group col-lg-2">
      <label for="phone number">Phone</label>
      <input type="text" class="form-control" id="phone{{id}}" value="{{phone}}">
    </div>
    <div class="form-group col-lg-1">
      <label for="date of bith">D.O.B.</label>
      <input type="text" class="form-control" id="dob{{id}}" value="{{dob}}">
    </div>
    <div class="form-group col-lg-1">
      <label for="ssn">SSN</label>
      <input type="text" class="form-control" id="ssn{{id}}" value="{{ssn}}">
    </div>
    <div style="display: none" id="alert" class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span> <span class="msg"></span>
    </div>
    <button class="btn-md btn-success text-white editUser mb-4 btn-circle" style="max-height:45px;margin-top:29px;"><i class="fas fa-2x fa-edit"></i></button>
     <button class="btn-md btn-danger text-white deleteUser mb-4 btn-circle" style="max-height:45px;margin-top:29px;"><i class="fas fa-2x fa-times"></i></button>
  </div>
</form>