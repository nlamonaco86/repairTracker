<div class="d-flex justify-content-center">
  <div class="card mb-3">
    <div class="card-header font-weight-bold h4 d-flex justify-content-center">Input Order:</div>
    <div class="card-body font-weight-bold">

      <form class="create-form">

        <div class="form-group">
          <label for="firstname">First Name:</label>
          <input type="text" id="firstname" name="name">
          <label for="lastname">Last Name:</label>
          <input type="text" id="lastname" name="name">
          <div class="d-flex justify-content-center">
            <label for="tel">Telephone:</label>
            <input type="text" id="tel" name="name">
          </div>
          <label for="issue" class="d-flex justify-content-center">Issue:</label>
          <textarea class="form-control" id="issue" rows="3"></textarea>
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn-lg btn-info">Add Customer</button>
        </div>
      </form>
      </form>
    </div>
  </div>

</div>