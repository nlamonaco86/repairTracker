<div class="jumbotron jumbotron-fluid bg-info">
  <div class="container">
    <h1 class="display-3 font-weight-bold">Repair Tracker</h1>
    <p class="lead text-dark"></p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="card bg-light mb-3">
        <div class="card-header font-weight-bold h4 d-flex justify-content-center">Received:</div>
        <div class="card-body font-weight-bold">
          {{#each burgers}}
          {{#if received}}
          {{> burgers/burger-block received=true}}
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card bg-light mb-3">
        <div class="card-header font-weight-bold h4 d-flex justify-content-center">In Progress:</div>
        <div class="card-body font-weight-bold">
           {{#each burgers}}
          {{#if inProgress}}
          {{> burgers/burger-block inProgress=true}}
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>


    <div class="col-lg-4">
      <div class="card bg-light mb-3">
        <div class="card-header font-weight-bold h4 d-flex justify-content-center">Waiting On Parts:</div>
        <div class="card-body font-weight-bold">
          {{#each burgers}}
          {{#if waiting}}
          {{> burgers/burger-block waiting=true}}
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
<div class="col-lg-10">
  <div class="card bg-light mb-3">
    <div class="card-header font-weight-bold h4 d-flex justify-content-center">Complete:</div>
    <div class="card-body font-weight-bold">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>
</div>

